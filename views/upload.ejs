<!DOCTYPE html>
<html lang="en">
<%- include('./partials/_head', { title: 'File Upload' }) %>

<body>
  <%- include('./partials/_header', { user: locals.user }) %>

  <div class="container mt-4">
    <% if (user) { %>
    <h2>Upload a File</h2>
    <form action="/upload" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="file" class="form-label">Choose file</label>
        <input type="file" class="form-control" id="file" name="file" required>
      </div>
      <button type="submit" class="btn btn-primary">Upload</button>
    </form>
    <% } else { %>
    <div class="alert alert-warning" role="alert">
      You need to be logged in to upload files. Please <a href="/auth/login" class="alert-link">login</a> or <a href="/auth/register" class="alert-link">register</a>.
    </div>
    <% } %>
  </div>
</body>

</html>