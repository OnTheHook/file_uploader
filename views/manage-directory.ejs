<!DOCTYPE html>
<html lang="en">
<%- include('./partials/_head', { title: 'Manage Directory' }) %>

<body>
  <%- include('./partials/_header', { user: user }) %>

  <div class="container mt-4">
    <h2>Manage Directory</h2>

    <form action="/directory/update/<%= directory.id %>" method="POST">
      <div class="mb-3">
        <label for="directoryName" class="form-label">Directory Name</label>
        <input type="text" class="form-control" id="directoryName" name="directoryName" value="<%= directory.name %>" required>
      </div>

      <button type="submit" class="btn btn-primary">Update Directory</button>
    </form>

    <form action="/directory/delete/<%= directory.id %>" method="POST" class="mt-3">
      <button type="submit" class="btn btn-danger">Delete Directory</button>
    </form>

    <a href="/directory" class="btn btn-secondary mt-3">Back to Files</a>
  </div>
</body>

</html>